{{#section 'head'}}
    <title>商品详情</title>
    <link rel="stylesheet" href="/css/goods_details.css">
{{/section}}

{{>topbar}}

<!--header start-->
{{>header_search}}
<!--header end-->

<!--nav start-->
{{>nav}}
<!--nav end-->
{{#with results}}
<input type="hidden" name="goodsId" value="{{id}}">
<!--商品详情 start-->
<div class="content_w">
    <div class="clearfix">
    <div class="imgPic f-l clearfix">
        {{#with thumbs}}
            <div class="pic f-l"><img src="{{#getOne 0}}{{/getOne}}"></div>
        {{/with}}
        <div class="list f-l">
            <a href="javascript:;" class="arrow arrow_top"></a>
            <div class="list_wrapper">
                <ul style="transform: translateY(0px);">
                    {{#each thumbs}}
                        <li><a href="javascript:;"><img src={{this}}></a></li>
                    {{/each}}
                </ul>
            </div>
            <a href="javascript:;" class="arrow arrow_bot"></a>
        </div>
    </div>
    <div class="desc f-l">
        <h2>{{#if goodsname}}{{goodsname}}{{else}} / {{/if}}</h2>
        <p>原产国/地：{{#if country}}{{country}}{{else}} / {{/if}}</p>
        <!--<p>货产国/地：{{source}}</p>-->
        <!--<p>型号：{{model}}</p>-->
        <p>毛重：{{#if GW}}{{GW}}{{else}} / {{/if}}kg</p>
        <p>商品规格：{{#if LWH}}{{LWH}}{{else}} / {{/if}}</p>
        <!--<p>储存方式/注意事项：{{#if needAttention}}{{needAttention}}{{else}} / {{/if}}</p>-->
        <a href="javascript:;" class="pur_btn">购买/采购</a>
    </div>
    <!--<a href="javascript:;" class="backToList">返回我的商品列表</a>-->
    </div>
    <div class="goods_details_pics">
        {{#each contents}}
            <img src="{{this}}"/>
        {{/each}}
    </div>
</div>
{{/with}}
<!--商品详情 end-->

