{{#section 'head'}}
    <title>登录</title>
    <link rel="stylesheet" href="/css/login.css">
{{/section}}
<!--header start-->
<header>
    <div class="login_header">
        <div class="content_w">
            <div class="logo f-l"></div>
            <div class="slogan f-l"></div>
            <ul class="role f-r">
               <li><a href="javascript:;">我是供应商</a></li>
               <li><a href="javascript:;">我是分销商</a></li>
               <li><a href="javascript:;">商品一览</a></li>
            </ul>
        </div>
    </div>
</header>
<!--header end-->

<!--content start-->
<div class="content">
    <div class="content_w">
        <!--login form statr-->
        <form id="loginForm">
            <h2 class="title">分销商账号登录</h2>
            <div class="input_div user">
                <input type="text" placeholder="请输入邮箱或手机号码" name="username"/>
            </div>
            <div class="input_div password">
                <input type="password" placeholder="请输入登录密码" name="password"/>
            </div>
            <div class="note">
                <label>
                    <input type="checkbox" class="remember "/>
                    <span class="blank_color">记住密码</span>
                </label>
                <a href="javascript:;" class="f-r ">忘记密码</a>
            </div>
            <a href="javascript:;" class="login_btn">登录</a>
            <div >
                <a href="javascript:;" class="main_color">商品一览</a>
                <a href="javascript:;" class="blank_color f-r">还没有注册，请马上注册</a>
            </div>
        </form>
        <!--login form end-->
    </div>
</div>
<!--content end-->

<!--process start-->
<div class="process">
    <h3>分销商加入流程</h3>
    <img src="/imgs/login/process.jpg"/>
</div>
<!--process end-->

{{#section 'jquery'}}
    <script src="/plugin/jquery-validation-1.14.0/jquery.validate.min.js"></script>
    <script src="/plugin/jquery-validation-1.14.0/localization/messages_zh.js"></script>
    <script>
        $(function () {
            var $login = $("#loginForm");
            $login.validate({
                rules: {
                    username: "required",
                    password: {
                        required: true,
                        minlength: 5
                    }
                },
                messages: {
                    username: "请输入邮箱或手机号码",
                    password: {
                        required: "请输入密码",
                        minlength: "密码长度不能小于 5 个字母"
                    }

                }
            });

            $('.login_btn').click(function () {
                if($login.valid()){
                    $.ajax({
                        url:'/login',
                        type:"post",
                        data : {
                            username:$login[0].username.value,
                            password : $login[0].password.value
                        },
                        success:function(){
                            alert('登录成功')
                        }
                    })
                }
            })
        })

    </script>
{{/section}}